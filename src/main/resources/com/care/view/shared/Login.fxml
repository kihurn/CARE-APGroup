<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.care.controller.shared.LoginController"
           styleClass="root"
           prefHeight="700" prefWidth="1000">
    
    <!-- Centered Login Card -->
    <VBox alignment="CENTER" spacing="25" styleClass="login-container">
        <padding>
            <Insets top="50" right="60" bottom="50" left="60"/>
        </padding>
        
        <!-- Logo/Title Section -->
        <VBox alignment="CENTER" spacing="8">
            <Text text="CARE" styleClass="title"/>
            <Text text="Customer Assistance and Resource Engine" styleClass="subtitle"/>
        </VBox>
        
        <!-- Spacer -->
        <Region minHeight="10"/>
        
        <!-- Login Form -->
        <VBox spacing="18" styleClass="form-container">
            
            <!-- Email Field -->
            <VBox spacing="8">
                <Label text="Email Address" styleClass="form-label"/>
                <TextField fx:id="emailField" 
                          promptText="your.email@example.com" 
                          styleClass="form-field"
                          prefHeight="45"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="8">
                <Label text="Password" styleClass="form-label"/>
                <PasswordField fx:id="passwordField" 
                              promptText="Enter your password" 
                              styleClass="form-field"
                              prefHeight="45"/>
            </VBox>
            
            <!-- Error Message -->
            <Label fx:id="errorLabel" 
                   styleClass="error-label" 
                   visible="false"
                   wrapText="true"/>
            
            <!-- Spacer -->
            <Region minHeight="5"/>
            
            <!-- Buttons -->
            <VBox spacing="12" alignment="CENTER">
                <Button fx:id="loginButton" 
                       text="Sign In" 
                       onAction="#handleLogin" 
                       styleClass="primary-button"
                       maxWidth="Infinity"
                       prefHeight="45"/>
                
                <!-- Separator Text -->
                <HBox alignment="CENTER" spacing="10">
                    <Separator HBox.hgrow="ALWAYS"/>
                    <Label text="or" style="-fx-text-fill: #adb5bd; -fx-font-size: 12px;"/>
                    <Separator HBox.hgrow="ALWAYS"/>
                </HBox>
                
                <Button fx:id="registerButton" 
                       text="Create New Account" 
                       onAction="#handleRegister" 
                       styleClass="secondary-button"
                       maxWidth="Infinity"
                       prefHeight="45"/>
            </VBox>
            
        </VBox>
        
        <!-- Quick Test Credentials Info -->
        <VBox alignment="CENTER" spacing="5" style="-fx-padding: 20 0 0 0;">
            <Label text="Test Credentials:" 
                   style="-fx-text-fill: #6c757d; -fx-font-size: 11px; -fx-font-weight: 600;"/>
            <Label text="Admin: admin@care.com / password" 
                   style="-fx-text-fill: #495057; -fx-font-size: 11px;"/>
            <Label text="User: user@gmail.com / password" 
                   style="-fx-text-fill: #495057; -fx-font-size: 11px;"/>
        </VBox>
        
    </VBox>
    
</StackPane>
