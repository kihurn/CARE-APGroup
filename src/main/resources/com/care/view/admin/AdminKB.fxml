<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.care.controller.admin.AdminKBController"
      spacing="20"
      style="-fx-background-color: white;">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Text text="Knowledge Base Management" styleClass="section-title"/>
            <Text text="Manage product manuals and support documentation" styleClass="section-subtitle"/>
        </VBox>
        
        <Button text="ðŸ”„ Refresh" 
                onAction="#handleRefresh"
                styleClass="secondary-button"/>
    </HBox>
    
    <!-- Instructions Card -->
    <VBox spacing="10" styleClass="info-box">
        <padding>
            <Insets top="15" right="20" bottom="15" left="20"/>
        </padding>
        <Text text="ðŸ“Œ How it works:" style="-fx-font-size: 14px; -fx-font-weight: 700; -fx-fill: #495057;"/>
        <Text text="â€¢ Each product can have ONE manual/documentation file (PDF)" 
              style="-fx-font-size: 13px; -fx-fill: #6c757d;"/>
        <Text text="â€¢ Upload manuals from the 'Manage Products' page when creating/editing products" 
              style="-fx-font-size: 13px; -fx-fill: #6c757d;"/>
        <Text text="â€¢ Green âœ… = Manual uploaded | Red âŒ = Manual missing" 
              style="-fx-font-size: 13px; -fx-fill: #6c757d;"/>
    </VBox>
    
    <!-- Products with Manual Status Table -->
    <TableView fx:id="productsKBTable" 
               styleClass="data-table"
               VBox.vgrow="ALWAYS">
        
        <columns>
            <TableColumn fx:id="productIdCol" 
                        text="ID" 
                        minWidth="50"
                        maxWidth="70"/>
            
            <TableColumn fx:id="productNameCol" 
                        text="Product Name" 
                        minWidth="180"/>
            
            <TableColumn fx:id="categoryCol" 
                        text="Category" 
                        minWidth="90"
                        maxWidth="120"/>
            
            <TableColumn fx:id="manualStatusCol" 
                        text="Status" 
                        minWidth="90"
                        maxWidth="120"/>
            
            <TableColumn fx:id="filePathCol" 
                        text="File Name" 
                        minWidth="150"
                        maxWidth="250"/>
            
            <TableColumn fx:id="actionsCol" 
                        text="Actions" 
                        minWidth="180"
                        maxWidth="200"/>
        </columns>
        
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="50" right="30" bottom="50" left="30"/>
                </padding>
                <Text text="ðŸ“¦" style="-fx-font-size: 48px;"/>
                <Text text="No products found" 
                      style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #6c757d;"/>
                <Text text="Add products from the 'Manage Products' page first" 
                      style="-fx-font-size: 14px; -fx-fill: #adb5bd;"/>
            </VBox>
        </placeholder>
    </TableView>
    
    <!-- Footer Stats -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="totalProductsLabel" 
               text="Total Products: 0"
               style="-fx-font-weight: 600; -fx-text-fill: #495057;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="manualsUploadedLabel" 
               text="Manuals Uploaded: 0"
               style="-fx-text-fill: #28a745; -fx-font-weight: 600;"/>
        <Label fx:id="manualsMissingLabel" 
               text="Manuals Missing: 0"
               style="-fx-text-fill: #dc3545; -fx-font-weight: 600;"/>
    </HBox>
    
</VBox>
