<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.care.controller.admin.AdminProductsController"
      spacing="20"
      style="-fx-background-color: white;">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Text text="Manage Products" styleClass="section-title"/>
            <Text text="Add, edit, or remove products from the catalog" styleClass="section-subtitle"/>
        </VBox>
        
        <Button text="Add Product" 
                    onAction="#handleAddProduct"
                    styleClass="primary-button"
                    style="-fx-font-weight: bold;"/>
    </HBox>
    
    <!-- Filter Section -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Filter by Category:" styleClass="form-label"/>
        <ComboBox fx:id="categoryFilterCombo" 
                 promptText="All Categories"
                 prefWidth="150"
                 onAction="#handleFilterChange"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <TextField fx:id="searchField" 
                  promptText="ðŸ” Search products"
                  prefWidth="250"
                  styleClass="form-field"/>
        
        <Button text="ðŸ”„ Refresh" 
                onAction="#handleRefresh"
                styleClass="secondary-button"/>
    </HBox>
    
    <!-- Products Table -->
    <TableView fx:id="productsTable" 
               styleClass="data-table"
               VBox.vgrow="ALWAYS"
               minHeight="300"
               prefHeight="500">
        
        <columns>
            <TableColumn fx:id="productIdCol" 
                        text="ID" 
                        minWidth="50"
                        maxWidth="80"/>
            
            <TableColumn fx:id="nameCol" 
                        text="Product Name" 
                        minWidth="180"/>
            
            <TableColumn fx:id="versionCol" 
                        text="Model/Version" 
                        minWidth="100"
                        maxWidth="150"/>
            
            <TableColumn fx:id="categoryCol" 
                        text="Category" 
                        minWidth="100"
                        maxWidth="150"/>
            
            <TableColumn fx:id="createdAtCol" 
                        text="Created" 
                        minWidth="100"
                        maxWidth="150"/>
            
            <TableColumn fx:id="actionsCol" 
                        text="Actions" 
                        minWidth="120"
                        maxWidth="180"/>
        </columns>
        
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="50" right="30" bottom="50" left="30"/>
                </padding>
                <Text text="ðŸ“¦" style="-fx-font-size: 48px;"/>
                <Text text="No products in catalog" 
                      style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #6c757d;"/>
            </VBox>
        </placeholder>
    </TableView>
    
    <!-- Footer Stats -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="totalProductsLabel" 
               text="Total Products: 0"
               style="-fx-font-weight: 600; -fx-text-fill: #495057;"/>
    </HBox>
    
</VBox>

