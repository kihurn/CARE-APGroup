<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.care.controller.agent.AgentMenuController"
      styleClass="sidebar-menu"
      spacing="10"
      prefWidth="250"
      minWidth="250">
    
    <padding>
        <Insets top="20" right="15" bottom="20" left="15"/>
    </padding>
    
    <!-- Agent Info Section -->
    <VBox alignment="CENTER" spacing="10" styleClass="user-info-card">
        <padding>
            <Insets top="20" right="15" bottom="20" left="15"/>
        </padding>
        
        <Text fx:id="agentNameText" text="Agent Name" styleClass="sidebar-username"/>
        <Text fx:id="agentRoleText" text="AGENT" styleClass="sidebar-role"/>
    </VBox>
    
    <!-- Navigation Buttons -->
    <VBox spacing="8" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20" right="0" bottom="0" left="0"/>
        </padding>
        
        <Button fx:id="dashboardBtn" 
                text="Dashboard" 
                onAction="#handleDashboard"
                styleClass="sidebar-button"
                style="-fx-font-weight: bold;"
                maxWidth="Infinity"/>
        
        <!-- Spacer -->
        <Region VBox.vgrow="ALWAYS"/>
        
        <Separator/>
        
        <Button fx:id="logoutBtn" 
                text="Logout" 
                onAction="#handleLogout"
                styleClass="sidebar-button-danger"
                style="-fx-font-weight: bold;"
                maxWidth="Infinity"/>
    </VBox>
    
</VBox>

