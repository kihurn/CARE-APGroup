<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.care.controller.admin.AdminTicketsController"
      spacing="20"
      style="-fx-background-color: white;">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Text text="Support Tickets Management" styleClass="section-title"/>
            <Text text="View and manage escalated support tickets" styleClass="section-subtitle"/>
        </VBox>
        
        <Button text="ðŸ”„ Refresh" 
                onAction="#handleRefresh"
                styleClass="secondary-button"/>
    </HBox>
    
    <!-- Filter Section -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Filter by Status:" styleClass="form-label"/>
        <ComboBox fx:id="statusFilterCombo" 
                 promptText="All Statuses"
                 prefWidth="150"
                 onAction="#handleFilterChange"/>
        
        <Label text="Filter by Priority:" styleClass="form-label"/>
        <ComboBox fx:id="priorityFilterCombo" 
                 promptText="All Priorities"
                 prefWidth="150"
                 onAction="#handleFilterChange"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <Label fx:id="totalTicketsLabel" 
               text="Total Tickets: 0"
               style="-fx-font-weight: 600; -fx-text-fill: #495057;"/>
    </HBox>
    
    <!-- Tickets Table -->
    <TableView fx:id="ticketsTable" 
               styleClass="data-table"
               VBox.vgrow="ALWAYS"
               minHeight="300"
               prefHeight="500">
        
        <columns>
            <TableColumn fx:id="ticketIdCol" 
                        text="Ticket ID" 
                        minWidth="70"
                        maxWidth="100"/>
            
            <TableColumn fx:id="sessionIdCol" 
                        text="Session" 
                        minWidth="70"
                        maxWidth="100"/>
            
            <TableColumn fx:id="userCol" 
                        text="User" 
                        minWidth="100"/>
            
            <TableColumn fx:id="productCol" 
                        text="Product" 
                        minWidth="120"/>
            
            <TableColumn fx:id="priorityCol" 
                        text="Priority" 
                        minWidth="70"
                        maxWidth="100"/>
            
            <TableColumn fx:id="statusCol" 
                        text="Status" 
                        minWidth="80"
                        maxWidth="120"/>
            
            <TableColumn fx:id="agentCol" 
                        text="Agent" 
                        minWidth="100"/>
            
            <TableColumn fx:id="createdAtCol" 
                        text="Created" 
                        minWidth="120"
                        maxWidth="160"/>
            
            <TableColumn fx:id="actionsCol" 
                        text="Actions" 
                        minWidth="120"
                        maxWidth="150"/>
        </columns>
        
        <placeholder>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="50" right="30" bottom="50" left="30"/>
                </padding>
                <Text text="ðŸŽ«" style="-fx-font-size: 48px;"/>
                <Text text="No tickets found" 
                      style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-fill: #6c757d;"/>
                <Text text="Tickets will appear here when chat sessions are escalated" 
                      style="-fx-font-size: 14px; -fx-fill: #adb5bd;"/>
            </VBox>
        </placeholder>
    </TableView>
    
    <!-- Footer Stats -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label fx:id="openTicketsLabel" 
               text="Open: 0"
               style="-fx-text-fill: #dc3545; -fx-font-weight: 600;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="inProgressTicketsLabel" 
               text="In Progress: 0"
               style="-fx-text-fill: #ffc107; -fx-font-weight: 600;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="resolvedTicketsLabel" 
               text="Resolved: 0"
               style="-fx-text-fill: #28a745; -fx-font-weight: 600;"/>
    </HBox>
    
</VBox>

